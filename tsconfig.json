{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./build",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "target": "es2015",
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "configFile": "./tslint.json"
      }
    ]
  },
  "exclude": ["node_modules/**", "build/**"]
}
